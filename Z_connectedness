var Brazil = ee.FeatureCollection("projects/ee-lucasljardim9/assets/Brazil");

var connectedness = ee.Image("projects/ee-lucasljardim9/assets/Biomas_resistencia_kernel");

var statistics_connectedness = connectedness
                               .reduceRegion({reducer: ee.Reducer.mean()
                                                       .combine({reducer2: ee.Reducer.stdDev(), sharedInputs: true}), 
                                              geometry: Brazil, 
                                              scale: connectedness.projection().nominalScale(), 
                                              maxPixels:1e13});
                                                     
print(statistics_connectedness)

